        </StackPanel>

        <StackPanel Margin="0 0 0 5">
                <TextBlock Name="tb2" FontFamily="Consolas" FontSize="16" Foreground="#aaabb8" Margin="0 0 0 10" TextWrapping="Wrap" />
                <TextBox x:Name="tbAnswer2" Background="Transparent" BorderThickness="2" FontFamily="Consolas" FontSize="16" Width="200" Height="25" Margin="0 0 0 5" />
        </StackPanel>

        <StackPanel Margin="0 0 0 5">
                <TextBlock Name="tb3" FontFamily="Consolas" FontSize="16" Foreground="#aaabb8"  Margin="0 0 0 10" TextWrapping="Wrap" />
