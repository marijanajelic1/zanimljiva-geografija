        <StackPanel Margin="0 0 0 5">
                <TextBlock Name="tb4" FontFamily="Consolas" FontSize="16" Foreground="#aaabb8" Margin="0 0 0 10" TextWrapping="Wrap" />
                <TextBox x:Name="tbAnswer4" Background="Transparent" BorderThickness="2" FontFamily="Consolas" FontSize="16" Width="200" Height="25" Margin="0 0 0 5" />
        </StackPanel>

        <StackPanel Margin="0 0 0 5">
                <TextBlock Name="tb5" FontFamily="Consolas" FontSize="16" Foreground="#aaabb8" Margin="0 0 0 10" TextWrapping="Wrap"/>
                <TextBox x:Name="tbAnswer5" Background="Transparent" BorderThickness="2" FontFamily="Consolas" FontSize="16" Width="200" Height="25" Margin="0 0 0 5" />
        </StackPanel>

            <Button Content="Potvrdi" Width="100" Height="30" FontFamily="Consolas" FontSize="18" Foreground="#25274D" Background="#2e9cca" Click="Button_Click"/>
    </StackPanel>

</Grid>
</Window>
