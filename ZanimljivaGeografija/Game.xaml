            </StackPanel.Effect>
            <StackPanel>
                <TextBlock  Foreground="#aaabb8"  Name="tbZ" FontFamily="Consolas" FontSize="20" FontWeight="Bold" Margin="0 0 0 5" TextWrapping="Wrap" />
